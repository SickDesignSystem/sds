{
  "cSpell.language": "en,lorem",
  "cSpell.enableFiletypes": [
    "editorconfig"
  ],
  "stylelint.packageManager": "pnpm",
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "javascript",
    "typescript"
  ],
  "css.lint.unknownAtRules": "ignore",
  "cssVariables.lookupFiles": [
    "packages/design-tokens/build/css/*.css"
  ],
  "eslint.workingDirectories": [
    "packages/css",
    "packages/design-tokens",
    "packages/docs",
    "packages/eslint-config-sds",
    "packages/icons",
    "packages/stylelint-config-sds"
  ]
}
