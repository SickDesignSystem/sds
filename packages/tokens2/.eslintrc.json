{
  "extends": [
    "@synergy-design-system/eslint-config-syn/ts"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".js"],
        "moduleDirectory": ["node_modules", "scripts"]
      },
      "typescript": {
        "extensions": [".ts", ".js"],
        "moduleDirectory": ["node_modules", "scripts"]
      }
    }
  }
}
