{
  "name": "@synergy-design-system/vanilla-demo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "test": "run-s vanilla_test vue_test react_test ng_test",
    "vanilla_test": "run-p -r serve_vanilla test_vanilla",
    "serve_vanilla": "npm start --prefix ../vanilla-demo",
    "test_vanilla": "sleep 2 && cross-env PORT='5173' playwright test",
    "vue_test": "run-p -r serve_vue test_vue",
    "serve_vue": "npm start --prefix ../vue-demo",
    "test_vue": "sleep 2 && cross-env PORT='5173' playwright test",
    "react_test": "run-p -r serve_react test_react",
    "serve_react": "npm start --prefix ../react-demo",
    "test_react": "sleep 2 && cross-env PORT='5173' playwright test",
    "ng_test": "run-p -r serve_ng test_ng",
    "serve_ng": "npm start --prefix ../angular-demo",
    "test_ng": "sleep 10 && cross-env PORT='4200' playwright test",
    "lint:css": "stylelint \"src/**/*.{css,js,ts}\"",
    "lint:js": "eslint src",
    "lint": "pnpm run /^lint:.*/"
  },
  "devDependencies": {
    "@synergy-design-system/eslint-config-syn": "workspace:^",
    "@synergy-design-system/stylelint-config-syn": "workspace:^",
    "@playwright/test": "^1.41.2",
    "@types/node": "^20.11.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^15.11.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "@synergy-design-system/components": "workspace:^",
    "@synergy-design-system/tokens": "workspace:^"
  }
}
