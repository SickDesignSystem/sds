{
  "extends": "stylelint-config-standard",
  "overrides": [
    {
      "files": ["*.ts", "*.js"],
      "customSyntax": "postcss-lit"
    }
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-alphabetical-order": true
  }
}
