{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "useDefineForClassFields": false,
    "lib": ["DOM", "ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "dist/esm",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "ES2022",
  },
  "include": ["./src"],
}
