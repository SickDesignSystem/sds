{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",

    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "importHelpers": true,
  
    /* Linting */
    "strict": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "paths": {
      "@synergy-design-system/angular/components": ["./components/index.ts"],
      "@synergy-design-system/angular/directives/validators": ["./directives/validators/validators.ts"],
    }
  },
  "angularCompilerOptions": {
    "compilationMode": "partial",
    "strictTemplates": true,
    "enableResourceInlining": true,
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true
  },
  "exclude": ["node_modules", "dist", "coverage"],
  "include": ["modules/**/*.ts", "components/**/*.ts", "directives/**/*.ts", "index.ts"]
}
